@model Model.EF.PRODUCT

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

<h2>Xóa</h2>

<div>
    <h4>NÔNG SẢN</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Loại nông sản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PRODUCT_KIND.Name_ProductKind)
        </dd>

        <dt>
            Tên nông sản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name_Product)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="@Model.Image_Product"/>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
            <button type="button" onclick="history.go(-1)" class="mu-readmore-btn">Quay Về</button>
        </div>
    }

</div>
