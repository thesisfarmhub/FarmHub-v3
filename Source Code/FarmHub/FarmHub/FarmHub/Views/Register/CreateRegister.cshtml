@model Model.DTO.Common.RegisterDTO

@{
    ViewBag.Title = "Create";
    Layout = null;
}
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <link href="~/Assets/common/CSS/Register.css" rel="stylesheet" />
    <link href="~/Assets/common/CSS/bootstrap-select.css" rel="stylesheet" />

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>


    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/common/JS/bootstrap-select.js"></script>


</head>
<style>
    .container {
        max-width: 2000px !important;
        margin-top: 0px;
    }
</style>
<!------ Include the above in your HEAD tag ---------->
<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="~/Assets/Login/images/Wheat.png" width="100" height="100" />
            <h3>Xin Chào!</h3>
            <p>Hãy Đăng kí tài khoản để sử dụng tiện ích của chúng tôi.</p>
            <input type="submit" onclick="window.location='/Login/LoginIndex';" value="Đăng Nhập" /><br />
        </div>
        <div class="col-md-9 register-right">
            <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Thương lái</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Chủ Nông Trại</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading">Đăng Kí Thương Lái</h3>
                    @using (Html.BeginForm("CreateTrader", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                    <div class="row register-form">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @style = "color:red" })
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.UserAu.Name_User, new { @maxlength = "30", @class = "form-control", type = "text", placeholder = "Tên Tài Khoản", required = "required" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.UserAu.Password_User, new { @maxlength = "30", @class = "form-control", type = "password", placeholder = "Mật Khẩu*", required = "required" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.trader.Birthday_Trader, new { @maxlength = "30", @class = "form-control", type = "text", placeholder = "Ngày Sinh*", required = "required", id = "traderBirthday" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.trader.Telephone_Trader, new { @maxlength = "10", @class = "form-control", type = "tel", placeholder = "Số Điện Thoại" })
                            </div>
                            <div class="form-group">
                                <div class="">
                                    <label class="radio inline">
                                        <input type="radio" name="gender" value="true" checked>
                                        <span> Nam </span>
                                    </label>
                                    <label class="radio inline">
                                        <input type="radio" name="gender" value="false">
                                        <span> Nữ </span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.trader.Name_Trader, new { @maxlength = "30", @class = "form-control", type = "text", placeholder = "Họ và Tên*", required = "required" })

                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.trader.Email_Trader, new { @maxlength = "30", @class = "form-control", type = "email", placeholder = "Email" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.trader.Address_Trader, new { @maxlength = "30", @class = "form-control", type = "text", placeholder = "Địa Chỉ" })
                            </div>

                            <select class="selectpicker btn-block" id="product1" multiple title="Chọn loại nông sản yêu thích" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-width="100%">
                                
                                @foreach (var item in Model.pruductkind)
                                {
                                    <option value="@item.productKindId">@item.productKindName</option>
                                }
                            </select>

                            <input type="submit" class="btnRegister" value="Đăng Kí" />
                        </div>

                    </div>
                    }
                </div>

                @*Farmer Register*@

                <div class="tab-pane fade show" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <h3 class="register-heading">Đăng Kí Chủ Nông Trại</h3>
                    @using (Html.BeginForm("CreateFarmer", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                    <div class="row register-form">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @style = "color:red" })
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.UserAu.Name_User, new { @maxlength = "30", size = 2, @class = "form-control", type = "text", placeholder = "Tên Tài Khoản", required = "required" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.UserAu.Password_User, new { @maxlength = "30", @class = "form-control", type = "password", placeholder = "Mật Khẩu*", required = "required" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.farmer.Birthday_Farmer, new { @maxlength = "30", @class = "form-control", type = "text", placeholder = "Ngày Sinh*", required = "required", id = "farmerBirthday" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.farmer.Telephone_Farmer, new { @maxlength = "10", @class = "form-control", type = "text", placeholder = "Số Điện Thoại", id = "traderTel" })
                            </div>
                            <div class="form-group">
                           
                                    <label class="radio inline">
                                        <input type="radio" name="gender" value="true" checked>
                                        <span> Nam </span>
                                    </label>
                                    <label class="radio inline">
                                        <input type="radio" name="gender" value="false">
                                        <span> Nữ </span>
                                    </label>
                                
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.farmer.Name_Farmer, new { @maxlength = "30", @class = "form-control", type = "text", placeholder = "Họ và Tên*", required = "required" })

                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.farmer.Email_Farmer, new { @maxlength = "30", @class = "form-control", type = "email", placeholder = "Email" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.farmer.Address_Farmer, new { @maxlength = "30", @class = "form-control", type = "text", placeholder = "Địa Chỉ" })
                            </div>
                            <select class="selectpicker " name="productKind" multiple title="Chọn loại nông sản yêu thích" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true" data-width="100%">

                                @foreach (var item in Model.pruductkind)
                                {
                                    <option value="@item.productKindId">@item.productKindName</option>
                                }

                            </select>
                            <input type="submit" class="btnRegister" />

                        </div>

                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#traderBirthday").datepicker(
            {
                changeMonth: true,
                changeYear: true,
                duration: '1000',
                "showAnim": "slide",
                dateFormat: 'dd-mm-yy',
                monthNames: ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12"],
                monthNamesShort: ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12"],
            });

        $("#farmerBirthday").datepicker(
            {
                changeMonth: true,
                changeYear: true,
                duration: '1000',
                "showAnim": "slide",
                dateFormat: 'dd-mm-yy',
                monthNames: ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12"],
                monthNamesShort: ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12"],
            });


       

    });


</script>