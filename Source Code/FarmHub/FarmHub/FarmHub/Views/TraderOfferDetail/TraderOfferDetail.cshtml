@model Model.DTO.Trader.PurchaseOfferDTO

@{
    ViewBag.Title = "OfferDetail";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}


<link href="~/Assets/trader/CSS/Offer.css" rel="stylesheet" />
<link href="~/Assets/common/CSS/nice-select.css" rel="stylesheet" />
<link href="~/Assets/common/CSS/BeautifulButton.css" rel="stylesheet" />


<link href="~/Assets/common/CSS/nice-select.css" rel="stylesheet" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>

<script src="~/Assets/common/JS/jquery.nice-select.js"></script>
<script src="~/Assets/common/JS/niceSelectBoxScript.js"></script>
<script src="~/Assets/trader/JS/OfferDetail.js"></script>

<input id="purchaseOfferId" type="hidden" value="@Model.purchOfferID" />
<input id="remainQuantity" type="hidden" value="@Model.remainQuantity" />

<style>
    body {
        max-width: 1800px !important;
        zoom: 90%;
    }
</style>

<div class="row">
    <Center>
        <div class="mu-title">
            <span class="mu-subtitle">Offers Detail</span>
            <h2>Chi tiết Đơn Chào Mua</h2>
            <i class="fa fa-shopping-basket" style="margin-right:-5px;"></i>
            <span class="mu-title-bar"></span>
        </div>
    </Center>

    <div class="col-md-4">

        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <Center>
                        <div class="mu-title">
                            <span class="mu-subtitle">Offer Info</span>
                            <h2>Thông Tin Chào Bán</h2>
                        </div>
                    </Center>

                    <div class="mu-about-us-left" style="padding-top:70px;">

                        <img src="@Url.Content(Model.image)" style="width:425px;height:300px; padding-bottom:20px;" />

                        <table class="table table-striped table-bordered table-hover" style="border:none; width: 100%" id="detailTbl">

                            <tr><td class="detailLabel">Tên Nông Sản:</td> <td>@Html.DisplayFor(x => x.productName)</td></tr>
                            <tr><td class="detailLabel">Tên Giống:</td> <td>@Html.DisplayFor(x => x.seedName)</td></tr>
                            <tr><td class="detailLabel">Đơn Giá</td> <td>@Html.DisplayFor(x => x.price)</td></tr>
                            <tr><td class="detailLabel">Khối Lượng đặt ban đầu:</td> <td>@Html.DisplayFor(x => x.quantity)</td></tr>
                            <tr><td class="detailLabel">Khối Lượng còn lại:</td> <td>@Html.DisplayFor(x => x.remainQuantity)</td></tr>
                            <tr><td class="detailLabel">Đơn vị:</td> <td>@Html.DisplayFor(x => x.massName)</td></tr>
                            <tr><td class="detailLabel">Thời gian giao tiền:</td> <td> @Html.DisplayFor(x => x.payingTime)</td></tr>
                            <tr><td class="detailLabel">Thời gian giao hàng:</td> <td>@Html.DisplayFor(x => x.deliveringTime) </td></tr>
                            @{var isAttachmentA = (Model.canBargain.Value ? "Có" : "Không");}
                            <tr><td>Có thể thương lượng<br />(Thời gian giao tiền và hàng):</td> <td>@Html.DisplayFor(modelItem => isAttachmentA) </td></tr>

                        </table>

                    </div>
                </div>
            </div>
        </div>


    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-body">
                <Center>
                    <div class="mu-title">
                        <span class="mu-subtitle">Suitable SaleOffers</span>
                        <h2>Đơn Đặt Bán Phù Hợp</h2>
                    </div>
                </Center>
                <table id="suitableSaleOffer" class="table table-striped table-bordered table-hover" style="width: 100%; ">
                    <thead>
                        <tr>
                            <th>Sản Phẩm</th>
                            <th>Nông Trại</th>
                            <th>Khối Lượng</th>
                            <th>Đơn Vị</th>
                            <th> Trong Lượng</th>
                            <th>Đơn Giá <br /> (VND/tấn)</th>
                            <th> Chi tiết</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-body">
                <Center>
                    <div class="mu-title">
                        <span class="mu-subtitle">Sale Offers from Farmers</span>
                        <h2>Đơn Đặt bán từ chủ nông trại</h2>
                    </div>
                </Center>
                <table id="saleOfferByPurchaseOffer" class="table table-striped table-bordered table-hover" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Ngày Đặt</th>
                            <th>Sản Phẩm</th>
                            <th>Giống</th>
                            <th>Nông Trại</th>
                            <th>Chủ Nông Trại</th>
                            <th>Đơn Giá <br /> (VND/tấn)</th>
                            <th>khối Lượng</th>
                            <th>Đơn Vị</th>
                            <th>Tổng Tiền</th>
                            <th>Trạng Thái</th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>


