@model IEnumerable<Model.EF.FEED_BACK>

@{
    ViewBag.Title = "FeedBackIndex";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
<link href="~/Assets/admin/css/BeautifulButton.css" rel="stylesheet" />
<link href="~/Assets/admin/css/Index.css" rel="stylesheet" />

<Center><h1>Danh Sách Phản Hồi</h1></Center>


<table class="table table-striped table-bordered table-hover" id="Table">
    <thead>
        <tr>
            <th>
                Chủ đề
            </th>
            <th>
                Tiêu Đề
            </th>
            <th>
                Tài Khoản
            </th>
            
            <th>Thao Tác</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TOPIC.Name_Topic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title_FeedBack)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.USER_AUTHENTICATION.Name_User)
                </td>
                <td>
                    <butto onclick="location.href='@Url.Action("Details", "FeedBack",new { id = item.Id_FeedBack })'" class="btn btn-primary" title="Xem Chi Tiết">
                        <span class="fa fa-info"></span>
                    </butto>
                </td>
            </tr>
        }

    </tbody>

</table>

<script>
    $('document').ready(function () {
        $('#Tables').dataTable();
    })
</script>